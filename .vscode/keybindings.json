[
    // ==================== ATAJOS PARA COMPILACIÓN ====================
    {
        "key": "cmd+f5",
        "command": "workbench.action.tasks.runTask",
        "args": "Build ASM",
        "when": "!inDebugMode"
    },
    {
        "key": "cmd+shift+f5", 
        "command": "workbench.action.tasks.runTask",
        "args": "Program ATmega328P (Xplain Mini)",
        "when": "!inDebugMode"
    },
    {
        "key": "f5",
        "command": "workbench.action.debug.start",
        "when": "!inDebugMode"
    },

    // ==================== ATAJOS PARA TAREAS COMUNES ====================
    {
        "key": "cmd+shift+m",
        "command": "workbench.action.tasks.runTask", 
        "args": "Serial Monitor"
    },
    {
        "key": "cmd+shift+c",
        "command": "workbench.action.tasks.runTask",
        "args": "Clean"
    },
    {
        "key": "cmd+shift+s",
        "command": "workbench.action.tasks.runTask",
        "args": "Show Program Size"
    },

    // ==================== ATAJOS PARA DIAGNÓSTICO ====================
    {
        "key": "cmd+shift+t",
        "command": "workbench.action.tasks.runTask",
        "args": "Test Xplain Connection" 
    },
    {
        "key": "cmd+shift+p cmd+shift+i",
        "command": "workbench.action.tasks.runTask",
        "args": "MCU Info"
    },
    {
        "key": "cmd+shift+p cmd+shift+l",
        "command": "workbench.action.tasks.runTask", 
        "args": "List Serial Ports"
    },

    // ==================== ATAJOS PARA PROGRAMADORES ALTERNATIVOS ====================
    {
        "key": "cmd+shift+f6",
        "command": "workbench.action.tasks.runTask",
        "args": "Program ATmega328P (Arduino)"
    },

    // ==================== WORKFLOW DE DESARROLLO ====================
    {
        "key": "cmd+shift+d",
        "command": "workbench.action.tasks.runTask",
        "args": "Development Workflow"
    },

    // ==================== NAVEGACIÓN EN TERMINAL ====================
    {
        "key": "cmd+shift+`",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "cmd+shift+k",
        "command": "workbench.action.terminal.kill"
    },

    // ==================== ATAJOS PARA ARCHIVOS ASSEMBLY ====================
    {
        "key": "cmd+/",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && editorLangId == 'asm-intel-x86-generic'"
    },
    {
        "key": "cmd+shift+/",
        "command": "editor.action.blockComment", 
        "when": "editorTextFocus && editorLangId == 'asm-intel-x86-generic'"
    },

    // ==================== NAVEGACIÓN RÁPIDA ====================
    {
        "key": "cmd+shift+o",
        "command": "workbench.action.gotoSymbol",
        "when": "editorTextFocus && editorLangId == 'asm-intel-x86-generic'"
    },
    {
        "key": "cmd+t",
        "command": "workbench.action.showAllSymbols"
    },

    // ==================== BÚSQUEDA Y REEMPLAZO ====================
    {
        "key": "cmd+shift+h",
        "command": "workbench.action.replaceInFiles"
    },
    {
        "key": "cmd+shift+f",
        "command": "workbench.action.findInFiles"
    }
]
